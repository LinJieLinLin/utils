{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    // 导出声明
    "declaration": true,
    // 导出声明目录
    "declarationDir": "./build",
    "outDir": "./build",
    "rootDir": "./src",
    "lib": ["esnext", "dom"]
  },
  "include": ["src/**/*.ts"]
}
