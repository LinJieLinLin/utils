{
  "name": "lj-utils",
  "version": "0.2.4",
  "description": "uni-app utils",
  "main": "./index.ts",
  "module": "./index.ts",
  "keywords": [
    "utils",
    "uni-app",
    "js",
    "vue"
  ],
  "author": "linjielinlin",
  "email": "993353454@qq.com",
  "license": "MIT",
  "private": false,
  "type": "module",
  "scripts": {
    "rollup": "rollup -c",
    "setVersion": "node --experimental-json-modules --no-warnings changeVersion.js",
    "rb": "rm -rf build/* && rollup -c && cp -rf ./static/* ./build && cp -rf *.md types.ts ./build/ && npm run setVersion",
    "b": "rm -rf build/* && tsc && cp -rf ./static/* ./build && cp -rf package.json *.md ./build/ &&sed -i -r 's/index.ts/index.js/g' ./build/package.json",
    "test": "jest",
    "testWatch": "jest ./test/microApi.spec.ts --watch --reporters=\"default\" ",
    "doc": "rm -rf dist/*&&jsdoc -c jsdoc.json && mv dist/lj-utils/*.*/* dist/lj-utils/ && cp static/baidu.js dist/lj-utils/scripts/baidu.js",
    "build": "npm run b&&npm run doc&&npm run test",
    "runDoc": "npm run doc && cd dist & http-server -d dist -p 1000 -c-1 -o",
    "z": "npm version patch",
    "y": "npm version minor",
    "x": "npm version major",
    "push": "nrm use npm && npm login && npm publish && nrm use taobao"
  },
  "dependencies": {
    "crypto-js": "^4.1.1",
    "js-base64": "^3.7.2"
  },
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@babel/plugin-transform-runtime": "^7.19.1",
    "@babel/preset-env": "^7.19.3",
    "@babel/register": "^7.18.9",
    "@types/crypto-js": "^4.1.1",
    "@types/jest": "^27.5.2",
    "@types/node": "^17.0.45",
    "docdash": "^1.2.0",
    "esbuild": "^0.15.10",
    "esbuild-jest": "^0.5.0",
    "eslint": "^7.32.0",
    "jest": "^27.5.1",
    "jest-html-reporters": "^3.0.11",
    "jsdoc": "^3.6.11",
    "rollup-plugin-dts": "^5.1.1",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript": "^1.0.1",
    "ts-jest": "^27.1.5",
    "typescript": "^4.8.4"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "engines": {
    "node": ">=16.13.0"
  },
  "engineStrict": true,
  "repository": {
    "type": "git",
    "url": "https://gitee.com/uni-pro/utils.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env"
      ]
    ],
    "plugins": [
      "@babel/plugin-transform-runtime"
    ]
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [],
    "extends": [],
    "env": {
      "wx": true
    },
    "globals": {
      "window": true,
      "taro": true,
      "uni": true,
      "wx": true,
      "getCurrentPages": true,
      "uniCloud": true
    }
  }
}
