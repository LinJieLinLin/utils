{
  "name": "lj-utils",
  "version": "0.2.0",
  "description": "uni-app utils",
  "main": "index.js",
  "keywords": [
    "utils",
    "uni-app",
    "js",
    "vue"
  ],
  "author": "linjielinlin",
  "email": "993353454@qq.com",
  "license": "MIT",
  "private": false,
  "scripts": {
    "doc": "rm -rf dist/*&&jsdoc -c jsdoc.json && mv dist/lj-utils/*.*/* dist/lj-utils/",
    "test": "mocha ./test/mocha/*.js --require @babel/register --bail",
    "testWatch": "mocha ./test/mocha/*.js --require @babel/register --bail --watch",
    "testHtml": "nyc --reporter=html --report-dir=./dist/coverage mocha ./test/mocha/*.js --require @babel/register --bail",
    "text": "nyc --reporter=text mocha ./test/mocha/*.js --require @babel/register --bail",
    "build": "npm run doc && npm run testHtml",
    "rundoc": "jsdoc -c jsdoc.json && cd dist & http-server -d dist -p 1000 -c-1 -o",
    "z": "echo '小改动' &&npm version patch",
    "y": "echo '特性更新' &&npm version minor",
    "x": "echo '大改动' &&npm version major",
    "preinstall": "echo 'install'",
    "push": "nrm use npm && npm login && npm publish && nrm use taobao"
  },
  "dependencies": {
    "chai": "^4.1.2",
    "crypto-js": "^4.1.1",
    "js-base64": "^3.7.2",
    "mocha": "^9.1.4",
    "nyc": "^15.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.13.0",
    "@babel/plugin-transform-runtime": "^7.16.10",
    "@babel/preset-env": "^7.16.11",
    "@babel/register": "^7.16.9",
    "chai-as-promised": "^7.1.1",
    "docdash": "^1.2.0",
    "eslint": "^7.0.0",
    "eslint-plugin-mocha": "^10.0.3",
    "jsdoc": "^3.6.6"
  },
  "peerDependencies": {
    "eslint-plugin-mocha": "^10.0.3"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "engines": {
    "node": ">=16.13.0"
  },
  "engineStrict": true,
  "repository": {
    "type": "git",
    "url": "https://gitee.com/uni-pro/utils.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env"
      ]
    ],
    "plugins": [
      "@babel/plugin-transform-runtime"
    ]
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "mocha"
    ],
    "extends": [
      "plugin:mocha/recommended"
    ],
    "globals": {
      "window": true
    }
  }
}
