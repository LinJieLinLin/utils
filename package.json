{
  "name": "lj-utils",
  "version": "0.2.1",
  "description": "uni-app utils",
  "main": "./index.ts",
  "keywords": [
    "utils",
    "uni-app",
    "js",
    "vue"
  ],
  "author": "linjielinlin",
  "email": "993353454@qq.com",
  "license": "MIT",
  "private": false,
  "scripts": {
    "b": "rm -rf build/* && tsc && cp -rf ./static/* ./build",
    "test": "jest",
    "testWatch": "jest ./test/microApi.spec.ts --watch --reporters=\"default\" ",
    "doc": "rm -rf dist/*&&jsdoc -c jsdoc.json && mv dist/lj-utils/*.*/* dist/lj-utils/",
    "build": "npm run b&&npm run doc&&npm run test",
    "runDoc": "npm run doc && cd dist & http-server -d dist -p 1000 -c-1 -o",
    "z": "echo '小改动' &&npm version patch && cd static && npm version patch",
    "y": "echo '特性更新' &&npm version minor",
    "x": "echo '大改动' &&npm version major",
    "preinstall": "echo 'install'",
    "push": "nrm use npm && npm login && npm publish && nrm use taobao"
  },
  "dependencies": {
    "crypto-js": "^4.1.1",
    "js-base64": "^3.7.2"
  },
  "devDependencies": {
    "@babel/core": "^7.13.0",
    "@babel/plugin-transform-runtime": "^7.16.10",
    "@babel/preset-env": "^7.16.11",
    "@babel/register": "^7.16.9",
    "@types/crypto-js": "^4.1.1",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.23",
    "@types/uni-app": "*",
    "docdash": "^1.2.0",
    "eslint": "^7.0.0",
    "jest": "^27.5.1",
    "jest-html-reporters": "^3.0.6",
    "jsdoc": "^3.6.6",
    "ts-jest": "^27.1.4",
    "typescript": "^4.6.3"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "engines": {
    "node": ">=16.13.0"
  },
  "engineStrict": true,
  "repository": {
    "type": "git",
    "url": "https://gitee.com/uni-pro/utils.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env"
      ]
    ],
    "plugins": [
      "@babel/plugin-transform-runtime"
    ]
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "mocha"
    ],
    "extends": [
      "plugin:mocha/recommended"
    ],
    "env": {
      "wx": true
    },
    "globals": {
      "window": true,
      "taro": true,
      "uni": true,
      "wx": true,
      "uniCloud": true
    }
  }
}
